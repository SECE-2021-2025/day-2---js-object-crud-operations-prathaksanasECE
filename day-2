        }
        return w.join('')
}

//for each loop

array=[]
const multiply=function (arr,n){
    arr.forEach((element)=>{
     array.push(element*n)
      return array 
    }
    );
}
var k =multiply([3,6,8],2)
console.log(array)

//map function t
array=[]
const multiply=function (arr,n){
    array=arr.map((e)=> e*n)
      return array 
    }
let a=multiply([3,6,8],2)
console.log(array)


