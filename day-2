
//arrays
const number= [1, 2, 3, 4, 5];

// Length of the array
const length = number.length;
console.log("Length:", length);

// Accessing elements
const firstElement = number[0];
console.log("First Element:", firstElement);

// Adding elements
number.push(6); // Adds 6 to the end
console.log("After push:", number);

// Removing elements
const lastElement = number.pop(); // Removes and returns the last element
console.log("Popped element:", lastElement);

// Iterating over elements
numbers.forEach((number) => {
  console.log("Number:", number);
});

// Finding the index of an element
const index = number.indexOf(3);
console.log("Index of 3:", index);

// Slicing the array
const slicedArray = number.slice(1, 3); // Returns a new array [2, 3]
console.log("Sliced array:", slicedArray);

// Joining array elements into a string
const joinedString = number.join(", ");
console.log("Joined string:", joinedString);

// Reversing the array
const reversedArray = number.reverse();
console.log("Reversed array:", reversedArray);

// Sorting the array
const sortedArray = number.sort();
console.log("Sorted array:", sortedArray);

//program to print first letter of each word in capital
function cap(word){
    let w=word.split('')
